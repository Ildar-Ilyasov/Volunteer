<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"> <!-- Центрируем содержимое по горизонтали -->

    <TextView
        android:id="@+id/tvNewsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Экстренные вызовы"
        android:textSize="24sp"
        android:gravity="center" /> <!-- Центрируем текст внутри TextView -->

    <Button
        android:id="@+id/policeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Позвонить в полицию"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/medicsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Позвонить в скорую"
        android:padding="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/fireButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Позвонить пожарным"
        android:padding="10dp"/>

</LinearLayout>
